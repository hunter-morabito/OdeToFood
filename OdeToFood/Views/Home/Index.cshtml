<!-- Directive -->
@model OdeToFood.ViewModels.HomeIndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title></title>
</head>
<body>
    <h1>@Model.CurrentMessage</h1>
    <table>
        @foreach (var restaurant in Model.Restaurants)
        {
        <tr>
            <td>@restaurant.Id</td>
            <td>@restaurant.Name</td>
            <td>
                <a href="/home/details/@restaurant.Id">Details</a>
                <!--This is and Html Helper which is more robust way to do the above-->
                @Html.ActionLink("Go", "Details", new { id=restaurant.Id })
                <!--Using Microsoft Tag Helpers,  this is now the best way to do the above-->
                <a asp-action="Details" asp-route-id="@restaurant.Id">More</a>
            </td>
        </tr>
        }
    </table>
</body>
</html>